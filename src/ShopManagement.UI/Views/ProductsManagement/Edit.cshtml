@model ShopManagement.Domain.Entities.Product




<div class="container px-5 my-5">

    <p style="text-align:center; color:blueviolet; font-size:20px; margin-bottom:80px;">Edit Product</p>

    <form method="post" asp-controller="ProductsManagement" asp-action="Edit">

        <input class=" form-control" name="id" type="hidden" value="@Model.Id" />

        <!-- نام محصول -->
        <div class="form-floating mb-3">
            <input value=@Model.Title class="form-control" id="productName" dir="rtl" name="name" placeholder="نام محصول" type="text" required />
        </div>

        <!-- قیمت -->
        <div class="form-floating mb-3">
            <input value=@Model.Price class="form-control" id="productPrice" dir="rtl" name="price" placeholder="قیمت" type="number" step="1" required />
        </div>

        <!-- موجودی انبار -->
        <div class="form-floating mb-3">
            <input value=@Model.Qty class="form-control" id="productQuantity" dir="rtl" name="quantity" placeholder="موجودی انبار" type="number" required />
        </div>



        <!-- دکمه ارسال -->
        <div class="d-grid">
            <button class="btn btn-primary btn-lg" id="submitButton" type="submit">ثبت</button>
        </div>
    </form>
</div>